{% extends '::base-logado.html.twig' %}

{% block body -%}
	
    <h1>Lista de Usuário</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Privilerio</th>
                <th>Telefone</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('crud_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.senha }}</td>
                <td>{{ entity.privilegio }}</td>
                <td>{{ entity.telefone }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('crud_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('crud_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('crud_new') }}">
                Crie um novo usuário
            </a>
        </li>
    </ul>
    {% endblock %}
